//로그인 버트 actionlistener

btn_login.addActionListener(new ActionListener() {
            @Override
            public void actionPerformed(ActionEvent e) {
                if(tf.getText().isEmpty()) {
                	JOptionPane.showMessageDialog(null, "값을 입력해주세요.");
                	//return;
                }else {
                	//Statement pstmt = con.createStatement();
                	try {
						rs = pstmt.executeQuery("SELECT * FROM customer where customer_id = '"+ tf.getText() +"'");
						if(rs.next()) {
							new member_chang();
						}else {
							JOptionPane.showMessageDialog(null, "회원아이디가 존재하지 않습니다.");
							//return;
						}
					} catch (SQLException e1) {
						// TODO Auto-generated catch block
						e1.printStackTrace();
					}
                }
                
            }
        });
	

//회원창 클래스
private class member_chang extends JFrame{
	member_chang(){
		super("회원창");
		setSize(600,400);
		setVisible(true);
	}
}
